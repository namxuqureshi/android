<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dev.officebox">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".TagActivity" />
        <activity android:name=".TagMainActivity" />
        <activity android:name=".MessageMainActivity" />
        <activity android:name=".NavigationActivity" />
        <activity android:name=".AddNewTagActivity" />
        <activity android:name=".NewMessageActivity" />
        <activity android:name=".ProfileTagActivity" />
        <activity android:name=".GroupsActivity" />
        <activity android:name=".FriendListActivity" />
        <activity android:name=".RequestsActivity" />
        <activity android:name=".NFCActivity" />


        <activity-alias
            android:name=".NFCTagInfoTagDetectionAlias"
            android:clearTaskOnLaunch="true"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:targetActivity=".SplashActivity">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/filter_nfc" />
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>

    </application>
</manifest>