<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2caca">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#d2d5d6"
        android:elevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="83dp">

            <TextView
                android:id="@+id/request_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/friendCircleView"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/friendCircleView"
                android:layout_toRightOf="@+id/friendCircleView"
                android:allowUndo="false"
                android:fontFamily="@string/title_activity_tag"
                android:text="Office"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                tools:targetApi="m" />

            <Button
                android:id="@+id/block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friendCircleView"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:text="ADD" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/block"
                android:layout_alignTop="@+id/block"
                android:layout_toEndOf="@+id/block"
                android:layout_toRightOf="@+id/block"
                android:background="@drawable/roundedbutton"
                android:text="BLOCK" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendCircleView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/space" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/card_view"
                android:text="7pm" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>